<div class="row">
	<div class="col-md-6 col-md-offset-3 text-center">
		<form class="form-signin" action= '/sessions' method="post">
			<h2 class="form-signin-heading">Log in</h2>

			<div class="form-group">
				<input type="text" name= "user[username]" id="inputUserName" class="form-control" placeholder="User Name">
			</div>

			<div class="form-group">
				<input type="password" name= "user[password]" id="inputPassword" class="form-control" placeholder="Password">
			</div>

			<div class="form-group">
					<input type="checkbox" value="remember-me"> Remember Me
			</div>

			<div class="form-group">
				<button class="btn btn-primary btn-lg" type="submit">Sign in</button>
			</div>

		</form>

		<form action= '/users/new' method="get">
			<p class="form-signin-heading">Not Registered?</p>

			<div class="form-group">
				<button class="btn btn-primary btn-sm" type="submit">Sign up</button>
			</div>

		</form>
	</div>
</div>