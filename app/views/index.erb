<div class="row">
	<% if @allTweets %>
		<p>True</p>
	<% else %>
		<p>False</p>
	<% end %>
</div>


	<% if current_user %>
	<section class="micropost_form">

		<div class="row">
			<div class="col-md-8 col-md-offset-4">
				<h2>All the lil' Twits</h2>
				</div>
		</div>

		<div class="row">
			<div class="col-md-3 jumbotron">
				<%= erb :_profile_sidebar %>
			</div>

			<div class="col-md-1">
			</div>

			<div class="col-md-8 jumbotron">
				<ul>
					<% @tweets.each do |tweet|%>
						<% date = tweet.created_at %>
						<li><span class="user">
							<strong><%=  tweet.user.username.capitalize %></strong>
						</span>
						<span class="timestamp">
							<%= date.strftime("at %I:%M%p on %m/%d/%Y") %>
						</span>
						<span class="content">
							<%= tweet.content %>
						</span>
						<hr>
						</li>
					<% end %>
				</ul>
			</div>
	 	</div>
 	</section>
 	<% else %>
 		<div class="col-md-12 jumbotron">
			<ul>
				<% @tweets.each do |tweet|%>
					<% date = tweet.created_at %>
					<li><span class="user">
						<strong><%=  tweet.user.username.capitalize %></strong>
					</span>
					<span class="timestamp">
						<%= date.strftime("at %I:%M%p on %m/%d/%Y") %>
					</span>
					<span class="content">
						<%= tweet.content %>
					</span>
					<hr>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>




